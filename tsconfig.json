{
    "compileOnSave": false,
    "compilerOptions": {
        "sourceMap": false,
        "declaration": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es5",
        "removeComments": true,
        "lib": [
            "es2015"
        ],
        "typeRoots": [
            "node_modules/@types"
        ],
        "allowJs": true,
        "outDir": "./dist",
        "rootDir": "./src"
    },
    "exclude": [
        "dist",
        "test",
        "node_modules",
        "webpack.config.js"
    ]
}
